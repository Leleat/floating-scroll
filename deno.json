{
  "license": "GPL-2.0-or-later",
  "tasks": {
    "build": "./scripts/build.sh",
    "build:dev": "./scripts/build.sh --unsafe-reload",
    "build:install": "./scripts/build.sh --install",
    "check:lint": "deno lint",
    "check:format": "deno fmt --check",
    "test": "deno test tests/",
    "translations:update": "./scripts/update-translations.sh"
  },
  "fmt": {
    "include": [
      "src/",
      "tests/"
    ],
    "exclude": [
      "src/shell/unexported/"
    ],
    "indentWidth": 4,
    "proseWrap": "preserve",
    "singleQuote": false
  },
  "lint": {
    "include": [
      "src/",
      "tests/"
    ],
    "exclude": [
      "src/shell/unexported/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": ["no-node-globals"]
    }
  },
  "imports": {
    "@girs/gjs": "npm:@girs/gjs@^4.0.0-beta.19",
    "@girs/gnome-shell": "npm:@girs/gnome-shell@^47.0.0",
    "@std/expect": "jsr:@std/expect@^1.0.10"
  }
}
